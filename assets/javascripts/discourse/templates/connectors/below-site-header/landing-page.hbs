{{#if render_page}}
<div class="heading-top">
    <div class="intro-video">
        <iframe width="100%" height="100%" src="https://www.youtube.com/embed/wXNMubPYw70?ecver=1" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="event-wrapper">

        <div class="live-events-wrapper">
            {{event-list events=live-topics type="current-events" time=time-now label="Now on"}}
        </div>

        <div class="next-events-wrapper">
            {{event-list events=next-topics type="current-events" time=time-next label="Next"}}
        </div>

        <div style="width:32%; height:100%; float:right;" class="right-hand-wrapper-4">
            <a class="twitter-timeline" href="https://twitter.com/DublinCityUni">Tweets by DublinCityUni</a>
            <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>

    </div>
</div>
{{/if}}
